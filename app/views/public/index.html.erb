<% if @user.present? %>
  <h2 class="text-center font-weight-bold border p-2 mb-4">Page gossip de <%= @user.first_name %>:</h2>
  <div class="d-flex flex-wrap justify-content-around">
    <% @user.gossips.each do |gossip| %>
      <div class="card m-2" style="width: 18rem;">
        <div class="card-body">
          <h5 class="card-title"><%= gossip.title %></h5>
          <p class="card-text">Contenu : <%= gossip.content %></p>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <p class="text-center">Utilisateur non trouv√©</p>
<% end %>
